<h1>Code Snippets</h1>

<% if @snip.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@snip.errors.count, "error") %> prohibited
      this snip from being saved:
    </h2>
    <ul>
      <% @snip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :snip, url: snips_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :code %><br>
    <%= f.text_area :code %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', snips_path %>
